<div class="container mx-auto">
  <div class="row mt-5">

    <%= form_with model: @user do |t| %>
      <div class="row mb-5">
        <%= t.label :name, class: "col-md-4" %>
        <%= t.text_field :name, class: "col-md-4"%>
      </div>

      <div class="row mb-5">
        <%= t.label :email, class: "col-md-4"%>
        <%= t.email_field :email, class: "col-md-4"%>
      </div>

      <div class="row mb-5">
        <%= t.label :password, class: "col-md-4"%>
        <%= t.password_field :password, class: "col-md-4"%>
      </div>

      <div class="row">
        <%= t.label :password_confirmation, class: "col-md-4"%>
        <%= t.password_field :password_confirmation, class: "col-md-4"%>
      </div>

      <div class="text-center mt-5">
        <%= t.submit "Enregistrer les modifications", class: "btn btn-success"%>
      </div>
  <% end%>
</div>
</div>
