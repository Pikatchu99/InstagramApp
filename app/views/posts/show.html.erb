<div class="container">
  <div class="row">
    <div class="col-md-8">

      <article class="blog-post  pt-5">
        <p class="ms-5"><%= @post.content %></p>
      </article>
      <% if @post.image.present? %>
        <div style="width: 30rem">
          <%= image_tag @post.image.url, :class => "card-img-top" %>
        </div>
        <% end %>
    </div>
    <div class="col-md-4">
      <div style="margin-top: 150px" class="text-center shadow mb-5 rounded">
        <a href="<%= posts_path %>" class="btn btn-"><i class="bi bi-arrow-left-circle-fill fs-1" style="color: black;"></i></a>
      <% if current_user.id == @post.user_id %>
        <a href="<%= edit_post_path(@post.id) %>" class="btn btn-outline-info btn-sm ms-5">Modifier</a>
        <a href="<%= post_path(@post.id)%>" class="btn btn-outline-danger btn-sm ms-5" data-confirm="Etes de vous sur ?" data-method="DELETE">Supprimer</a>
      <% end %>
    </div>
    </div>
  </div>
</div>
