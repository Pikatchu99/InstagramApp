<div class="container">
  <article class="blog-post pb-3 pt-5">
    <p class="ms-5 mt-5"><%= @post.content %></p>
  </article>

  <p>
    <% if @post.image.present? %>
    <strong>Image:</strong>
    <div class="card" style="width: 30rem;">
      <%= image_tag @post.image.url, :class => "card-img-top" %>
    </div>
    <% end %>

  <p class="mt-5">
    <a href="<%= edit_post_path(@post.id) %>" class="btn btn-warning me-4">Back to create</a>
    <a href="<%= confirmed_path(@post.id) %>" class="btn btn-success">Je confirme</a>
  </p>
</div>
