<div class="container">

  <div class="row">
    <div class="col-md-4 text-center">
      <% if @user.profile_picture.present? %>
      <%= image_tag @user.profile_picture.url, :class => "w-50" %>
      <% else %>
      <img src="<%= asset_path 'default.jpg' %>" title="bitmoji" class="w-50">
      <% end %>
      <% if current_user.id == @user.id %>
      <a href="<%= edit_user_path(@user.id) %>" class="btn btn-danger">Edit Profile</a>
      <% end %>

      <div style="text-align: right"><%= @user.posts.count%><strong class="me-3">   Posts</strong><%= @user.favorites.count%><strong>   Favorites</strong></div>
    </div>
    <div class="col-md-8" class="mt-5">
      <div class="d-flex flex-column mt-2">
        <div class="username text-center">
          <div class="row">
            <div class="col-md-6">
              <strong>Username:  </strong>
            </div>
            <div class="col-md-6">
              <span class="fs-1"><%=@user.name%></span>
            </div>
          </div>
        </div>
        <div class="mailuser text-center">
          <div class="row">
            <div class="col-md-6">
              <strong>User Mail: </strong>
            </div>
            <div class="col-md-6">
              <span style="font-family: 'Dancing Script', cursive;" class="fs-3"><%=@user.email%></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div style="widht: 100%; border: 1px solid #E54867;" class="mt-5"></div>
  <div class="text-center mb-5 mt-2">
  <a  class="btn btn-success" href="<%= user_path(@user.id) %>">Post</a>
  <a  class="btn" href="<%= favor_path(@user.id) %>">Favorites</a>
  </div>
  <div class="tab-content">
    <div class="tab-pane fade show active">
      <div class="row">
        <% @user.posts.each do |pst| %>
        <div class="col-sm-3 col-md-3">
          <div class="card mb-5" style="width: 100%">
            <%= link_to post_path(pst.id), :style => "text-decoration: none;", :class => "text-dark" do %>
            <div class="card-body ">
              <% if pst.image.present? %>
              <%= image_tag pst.image.url, :class => "card-img-top" %>
              <% end %>
              <p class="card-text mt-3"><%= pst.content %></p>
            </div>
            <% end %>

            <div class="card-footer text-muted">
              2 minutes ago
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
